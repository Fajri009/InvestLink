<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PortofolioPage.portofolio_fragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="70dp"
        android:layout_width="match_parent"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/profile"
            android:layout_height="55dp"
            android:layout_width="55dp"
            android:src="@drawable/baseline_account_circle_24"
            app:tint="@color/text_primary" />

        <ImageView
            android:id="@+id/chatAdmin"
            android:layout_height="35dp"
            android:layout_width="35dp"
            android:layout_gravity="right"
            android:layout_marginEnd="25dp"
            android:src="@drawable/chat_admin"
            app:tint="@color/text_primary" />
    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/portofolio_recylerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"></androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>