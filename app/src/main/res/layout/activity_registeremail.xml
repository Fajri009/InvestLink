<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginPage.RegisterEmail">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="70dp"
        android:layout_width="match_parent">

        <ImageView
            android:id="@+id/backPage"
            android:layout_height="35dp"
            android:layout_width="35dp"
            android:src="@drawable/back_button"
            app:tint="@color/text_primary"
            />

        <TextView
            android:text="Register"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/text_primary"
            android:textSize="23sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:fontFamily="@font/nunitobold"
            />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center_horizontal"
        android:id="@+id/progressBar"
        android:orientation="horizontal">

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleY="0.5"
            android:progress="100"
            android:progressTint="@color/grey"
            android:layout_marginStart="10dp"
            android:progressDrawable="@drawable/rounded_progress_bar"/>

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleY="0.5"
            android:progress="0"
            android:progressTint="@color/theme_color"
            android:layout_marginStart="10dp"
            android:progressDrawable="@drawable/rounded_progress_bar"/>

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleY="0.5"
            android:progress="0"
            android:progressTint="@color/grey"
            android:layout_marginStart="10dp"
            android:progressDrawable="@drawable/rounded_progress_bar"/>

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleY="0.5"
            android:progress="0"
            android:progressTint="@color/grey"
            android:layout_marginStart="10dp"
            android:progressDrawable="@drawable/rounded_progress_bar"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/progressBar"
        android:layout_marginStart="30dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="What's your E-mail Address?"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:fontFamily="@font/nunitosemibold"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="@color/cardview_light_background"
            android:layout_marginBottom="20dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopStart="10dp"
            android:layout_marginTop="10dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <EditText
                android:id="@+id/email"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your email"
                android:inputType="textEmailAddress" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/description2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="What's your phone number?"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:fontFamily="@font/nunitosemibold"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="@color/cardview_light_background"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopStart="10dp"
            android:layout_marginTop="10dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <EditText
                android:id="@+id/noTelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your phone number"
                android:inputType="phone" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnNext"
        android:layout_width="285dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        app:cornerRadius="10dp"
        android:textStyle="bold"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="@color/text_primary"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="140dp"
        />
</RelativeLayout>