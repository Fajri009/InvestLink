<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginPage.LoginActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:text="Masuk"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/biru_gelap"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            />
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/toolbar"
        android:layout_margin="40dp"
        android:id="@+id/form">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            app:boxBackgroundColor="@color/cardview_light_background">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/email"
                android:inputType="textEmailAddress"
                android:hint="Abcde@gmail.com">

            </EditText>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            app:boxBackgroundColor="@color/cardview_light_background"
            app:passwordToggleEnabled="true">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pass"
                android:inputType="textPassword"
                android:hint="Password">
            </EditText>
        </com.google.android.material.textfield.TextInputLayout>
   <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lupaSandi"
            android:text="Lupa Kata Sandi?"
            android:layout_marginBottom="20dp"
            android:layout_below="@id/pass"
            android:gravity="end"
            android:textColor="@color/biru_gelap">
        </TextView>
    </LinearLayout>
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/form"
        android:padding="18dp"
        android:id="@+id/loginBtn"
        android:layout_centerInParent="true"
        android:text="Login"
        android:backgroundTint="@color/biru_gelap">
    </Button>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/loginBtn"
        android:layout_margin="40dp"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Belum Punya Akun?">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Daftar Sekarang"
            android:id="@+id/daftar"
            android:textColor="@color/biru_gelap">
        </TextView>
    </LinearLayout>
</RelativeLayout>